@{
    ViewBag.Title = "Alien Age Calulator";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using SSGeek.Models;
@model SSGeek.Models.AlienAgeModel

<h2 style="text-align: center; color: red; margin: 0 auto; padding-bottom: 20px;">Alien Weight Calculator</h2>

@using (Html.BeginForm("AlienWeightResult", "Calculators", FormMethod.Get))
    {
        <div class="formInputGroup">
        @Html.Label("Planets", "Choose a Planet")
        @Html.DropDownListFor(m => m.PlanetList, AlienAgeModel.Planets)
        </div>
        <div class="formInputGroup">
            @Html.Label("Planets", "Enter your Earth Weight ")
            @Html.TextBoxFor(m => m.EarthWeight)
        </div>


        <button class="formSubmitButton">CALCULATE!</button>
}